<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowRapairActivity"
    android:background="@color/fon1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnShowRapairBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:background="@drawable/button_style_press"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/textShowRapairSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Серийный"
                android:inputType="number"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textShowRapairName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Наименование"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textShowRapairDop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Дополнительная информамция"
                android:inputType="textPersonName"
                android:textSize="24dp" />


            <EditText
                android:id="@+id/textShowRapairQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Количество"
                android:inputType="number"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnShowRapairRedact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Редактировать"
                    android:textSize="10dp"
                    android:background="@drawable/button_style_press"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnShowRapairDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:enabled="false"
                    android:text="удалить"
                    android:background="@drawable/button_style_press"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnShowRapairSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:enabled="false"
                    android:text="Сохранить"
                    android:background="@drawable/button_style_press"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>