<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowOfficeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад" />

            <EditText
                android:id="@+id/textInv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Инвентарный"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textSer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Серийный"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textNa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Название"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textGrou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Группа"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textDops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Доп"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="textview"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/editTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/btnRedact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Редактировать" />

            <Button
                android:id="@+id/btnShowOfficeSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>