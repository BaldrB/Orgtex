<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowOfficeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад" />

            <EditText
                android:id="@+id/textInv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Инвентарный"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textSer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Серийный"
                android:inputType="number"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textNa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Название"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textGrou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Группа"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/textDops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Доп"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRedact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="10dp"
                    android:text="Редактировать" />

                <Button
                    android:id="@+id/btnShowOfficeTechDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:enabled="false"
                    android:text="удалить" />

                <Button
                    android:id="@+id/btnShowOfficeSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:enabled="false"
                    android:text="Сохранить" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTechnikShowRepairAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Добавить Запчасть" />

                <Button
                    android:id="@+id/btnTechnikShowRepairDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Удалить запчасти" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listShowOffice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="multipleChoice" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>